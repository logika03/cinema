@model RegistrationViewModel
@{
	ViewData["title"] = "Регистрация";
	var isUnavailable = Model.IsLoginUnavailable || Model.IsEmailUnavailable;
}

<div id="main" class="z-index--1">
	<div class="super-container p-2 mb-4 d-flex justify-content-center align-items-center flex-column">
		<div class="mt-3 w-50">
			<div id="alert" class="alert alert-danger login-form-error @(isUnavailable? "": "d-none")">
				<div id="termsError" class="d-none">Для завершения регистрации Вы должны принять условия пользовательского соглашения</div>
				<div id="loginError" class="@(Model.IsLoginUnavailable? "": "d-none ")mt-2">Данный логин занят</div>
				<div id="emailError" class="@(Model.IsEmailUnavailable? "": "d-none ")mt-2">Пользователь с данным email уже зарегистрирован</div>
			</div>
			<h3 class="text-center">Регистрация</h3>
		</div>
		<form action="" method="post" class="w-50 mt-3 placeholder-white validate @(Model.IsErrors?"validate-immediately":"")">
			<div class="form-group">
				<div class="input-group">
					<div class="input-group-prepend">
						<span class="input-group-text addon-dark-transparent" id="register-name-addon" style="font-size: 1.2rem">
							<svg width="0.8em" height="0.8em" viewBox="0 0 16 16" class="bi bi-person-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
								<path d="M13.468 12.37C12.758 11.226 11.195 10 8 10s-4.757 1.225-5.468 2.37A6.987 6.987 0 0 0 8 15a6.987 6.987 0 0 0 5.468-2.63z"/>
								<path fill-rule="evenodd" d="M8 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
								<path fill-rule="evenodd" d="M8 1a7 7 0 1 0 0 14A7 7 0 0 0 8 1zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z"/>
							</svg>
						</span>
					</div>
					<input limit=32 type="text" class="form-control textarea-dark-transparent name" id="registerName" placeholder="Имя" name="name" value="@Model.Name">
				</div>
			</div>

			<div class="form-group">
				<div class="input-group">
					<div class="input-group-prepend">
						<span class="input-group-text addon-dark-transparent" id="register-surname-addon">
							<svg width="0.8em" height="0.8em" viewBox="0 0 16 16" class="bi bi-person-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
								<path d="M13.468 12.37C12.758 11.226 11.195 10 8 10s-4.757 1.225-5.468 2.37A6.987 6.987 0 0 0 8 15a6.987 6.987 0 0 0 5.468-2.63z"/>
								<path fill-rule="evenodd" d="M8 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
								<path fill-rule="evenodd" d="M8 1a7 7 0 1 0 0 14A7 7 0 0 0 8 1zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z"/>
							</svg>
						</span>
					</div>
					<input limit=32 type="text" class="form-control textarea-dark-transparent surname" id="registerSurname" placeholder="Фамилия" name="surname" value="@Model.Surname">
				</div>
			</div>

			<div class="form-group">
				<div class="input-group">
					<div class="input-group-prepend">
						<span class="input-group-text addon-dark-transparent" id="register-login-addon" style="font-size: 1.2rem">
							<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-at" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
								<path fill-rule="evenodd" d="M13.106 7.222c0-2.967-2.249-5.032-5.482-5.032-3.35 0-5.646 2.318-5.646 5.702 0 3.493 2.235 5.708 5.762 5.708.862 0 1.689-.123 2.304-.335v-.862c-.43.199-1.354.328-2.29.328-2.926 0-4.813-1.88-4.813-4.798 0-2.844 1.921-4.881 4.594-4.881 2.735 0 4.608 1.688 4.608 4.156 0 1.682-.554 2.769-1.416 2.769-.492 0-.772-.28-.772-.76V5.206H8.923v.834h-.11c-.266-.595-.881-.964-1.6-.964-1.4 0-2.378 1.162-2.378 2.823 0 1.737.957 2.906 2.379 2.906.8 0 1.415-.39 1.709-1.087h.11c.081.67.703 1.148 1.503 1.148 1.572 0 2.57-1.415 2.57-3.643zm-7.177.704c0-1.197.54-1.907 1.456-1.907.93 0 1.524.738 1.524 1.907S8.308 9.84 7.371 9.84c-.895 0-1.442-.725-1.442-1.914z"/>
							</svg>
						</span>
					</div>
					<input limit=32 type="text" class="form-control textarea-dark-transparent login" id="registerLogin" placeholder="Логин" name="login" value="@Model.Login">
				</div>
			</div>

			<div class="form-group">
				<div class="input-group">
					<div class="input-group-prepend">
						<span class="input-group-text addon-dark-transparent" id="register-email-addon" style="font-size: 1.2rem">
							<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-at" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
								<path fill-rule="evenodd" d="M13.106 7.222c0-2.967-2.249-5.032-5.482-5.032-3.35 0-5.646 2.318-5.646 5.702 0 3.493 2.235 5.708 5.762 5.708.862 0 1.689-.123 2.304-.335v-.862c-.43.199-1.354.328-2.29.328-2.926 0-4.813-1.88-4.813-4.798 0-2.844 1.921-4.881 4.594-4.881 2.735 0 4.608 1.688 4.608 4.156 0 1.682-.554 2.769-1.416 2.769-.492 0-.772-.28-.772-.76V5.206H8.923v.834h-.11c-.266-.595-.881-.964-1.6-.964-1.4 0-2.378 1.162-2.378 2.823 0 1.737.957 2.906 2.379 2.906.8 0 1.415-.39 1.709-1.087h.11c.081.67.703 1.148 1.503 1.148 1.572 0 2.57-1.415 2.57-3.643zm-7.177.704c0-1.197.54-1.907 1.456-1.907.93 0 1.524.738 1.524 1.907S8.308 9.84 7.371 9.84c-.895 0-1.442-.725-1.442-1.914z"/>
							</svg>
						</span>
					</div>
					<input type="text" class="form-control textarea-dark-transparent email" id="registerEmail" placeholder="Email" name="email" value="@Model.Email">
				</div>
			</div>

			<div class="form-group">
				<div class="input-group">
					<div class="input-group-prepend">
						<span class="input-group-text addon-dark-transparent" id="register-password-addon">
							<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-lock-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
								<path d="M2.5 9a2 2 0 0 1 2-2h7a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-7a2 2 0 0 1-2-2V9z"/>
								<path fill-rule="evenodd" d="M4.5 4a3.5 3.5 0 1 1 7 0v3h-1V4a2.5 2.5 0 0 0-5 0v3h-1V4z"/>
							</svg>
						</span>
					</div>
					<input type="password" class="form-control textarea-dark-transparent password" id="registerPassword" placeholder="Пароль" name="password" value="">
				</div>
			</div>

			<div class="form-group">
				<div class="input-group">
					<div class="input-group-prepend">
						<span class="input-group-text addon-dark-transparent" id="register-confirmation-password-addon">
							<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-lock-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
								<path d="M2.5 9a2 2 0 0 1 2-2h7a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-7a2 2 0 0 1-2-2V9z"/>
								<path fill-rule="evenodd" d="M4.5 4a3.5 3.5 0 1 1 7 0v3h-1V4a2.5 2.5 0 0 0-5 0v3h-1V4z"/>
							</svg>
						</span>
					</div>
					<input type="password" class="form-control textarea-dark-transparent confirmationPassword" id="registerConfirmationPassword" placeholder="Подтвердите пароль" name="confirmationPassword" value="">
				</div>
			</div>

			<div class="form-check pl-1 d-flex justify-content-center align-items-center flex-column mb-3">
				<input type="checkbox" class="form-check-input checkbox-dark-transparent terms" id="registerTerms" name="terms">
				<label class="form-check-label" for="registerTerms">Я принимаю условия</label>
				<a href="@Url.Content("~/terms")" class="link-white">Пользовательского соглашения</a>
				<div class="d-flex flex-column align-items-center justify-content-center mt-3">
					<button type="submit" class="btn btn-outline-dark-transparent">Зарегистрироваться</button>
				</div>
			</div>

		</form>
	</div>
</div>

@section Scripts{
	<script src="~/js/register.js"></script>
}

@model MainViewModel
@{
	ViewData["title"] = "Главная";
}

<div id="main" class="z-index--1">
				<div id="carouselPremiere" class="carousel slide" data-ride="carousel">
					<ol class="carousel-indicators">
						<li data-target="#carouselPremiere" data-slide-to="0" class="active"></li>
						<li data-target="#carouselPremiere" data-slide-to="1"></li>
						<li data-target="#carouselPremiere" data-slide-to="2"></li>
					</ol>
					<div class="carousel-inner">
						<div class="carousel-item active">
							<img class="d-block w-100" src="~/slide1.jpg" alt="First slide">
						</div>
						<div class="carousel-item">
							<img class="d-block w-100" src="~/slide2.jpg" alt="Second slide">
						</div>
						<div class="carousel-item">
							<img class="d-block w-100" src="~/slide3.jpg" alt="Third slide">
						</div>
					</div>
					<a class="carousel-control-prev" href="#carouselPremiere" role="button" data-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					</a>
					<a class="carousel-control-next" href="#carouselPremiere" role="button" data-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
					</a>
				</div>

				<div id="top-movies" class="container-fluid px-0">
					<div class="headline">
						<hr class="mt-0">
						<h2 class="text-white-transparent text-center">Хиты</h2>
						<hr class="mb-0">
					</div>
					<div id="top-movies-slick" class="d-none">
						@foreach (var slickItem in Model.TopFilms)
						{
							@Html.Partial("_SlickMovieItemPartial", slickItem)
						}
					</div>
				</div>

				<div id="movies-today" class="">
					<div class="headline">
						<hr class="mt-0">
						<h2 class="text-white-transparent text-center">Сегодня в прокате</h2>
						<hr class="mb-0">
					</div>
					<div id="movies-today-list" class="movies-today-list list-group list-group-flush">
						@foreach (var movie in Model.TodayFilms)
						{
							@Html.Partial("_MovieTodayItemPartial", movie)
						}
					</div>
				</div>
			</div>

@section Scripts{
	<script src="~/js/mainPage_script.js"></script>
}
@model FilmViewModel

<a href="@Url.Content($"~/film/{Model.Id}")" class="list-group-item list-group-item-action d-flex flex-row align-items-start li-dark-transparent">
    <div class="row py-1 pr-4 pl-lg-0 pl-4 justify-content-lg-center align-items-center">
        <div class="col-auto p-0 movie-list-item-content">
            <img src="@Url.Content(Model.ImagePath)" class="bg-white d-flex align-items-center justify-content-center h-100 w-100"/>
        </div>
        <div class="col-3 ml-3 movie-list-item-info d-flex flex-column align-items-start justify-content-around">
            <div>
                <div class="d-flex justify-content-center align-items-center">
                    <h4>@Model.Name</h4>
                    <h5 class="badge badge-secondary ml-2" style="font-size: 1rem; margin-bottom:3px">New</h5>
                </div>
                <small>@Model.Year г.</small>
            </div>
            <small>@Model.Genres.Aggregate((a, b) => $"{a}, {b}")</small>
            <small class="text-small">Продолжительность: @Model.Duration.TotalMinutes мин.</small>
        </div>

        <div class="col-lg-7 col-6 d-none d-860-block d-lg-block d-xl-block">
            <h4>Описание</h4>
            <p>@Model.Description</p>
        </div>
    </div>
</a>